<Page x:Class="Translit.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p="clr-namespace:Translit.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="Settings">
	<StackPanel Margin="50 50 0 0">
		<StackPanel Orientation="Horizontal">
			<ToggleButton IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=AutoSave, Mode=TwoWay}"/>
			<TextBlock Text="{DynamicResource TextBlockDocumentAutoSave}" FontSize="16" Margin="10" VerticalAlignment="Center" Foreground="#404040"></TextBlock>
		</StackPanel>
	</StackPanel>
</Page>
