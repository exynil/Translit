<Window
	x:Class="Translit.Windows.AddDialogWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="{DynamicResource TitleAdding}"
	Width="340"
	Height="230"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="50" />
			<RowDefinition Height="30" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBox
			x:Name="TextBoxAddCyryllic"
			Grid.Row="0"
			Margin="10,0,10,0"
			materialDesign:HintAssist.Hint="{DynamicResource HintCyryllic}" />
		<TextBox
			x:Name="TextBoxAddLatin"
			Grid.Row="1"
			Margin="10,0,10,0"
			materialDesign:HintAssist.Hint="{DynamicResource HintLatin}" />
		<TextBlock
			x:Name="TextBlockMessage"
			Grid.Row="2"
			Margin="10,0,10,0"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			FontSize="14" />
		<WrapPanel Grid.Row="3" HorizontalAlignment="Center">
			<Button
				Margin="10,15"
				Click="Accept_Click"
				Content="{DynamicResource ButtonAdd}"
				IsDefault="True" />
			<Button
				Margin="10,15"
				Content="{DynamicResource ButtonCancel}"
				IsCancel="True" />
		</WrapPanel>
	</Grid>
</Window>
