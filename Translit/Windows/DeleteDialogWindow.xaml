<Window x:Class="Translit.Windows.DeleteDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Translit.Windows"
        mc:Ignorable="d"
        Title="DeleteException" Height="180" Width="300" WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		<TextBlock Text="Вы действительно хотите удалить?" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
		<WrapPanel Grid.Row="1" HorizontalAlignment="Center">
			<Button IsDefault="True" Click="Accept_Click" Margin="10 15">Да</Button>
			<Button IsCancel="True" Margin="10 15">Нет</Button>
		</WrapPanel>
	</Grid>
</Window>
