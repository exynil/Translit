<Window
	x:Class="Translit.Windows.DeleteDialogWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="{DynamicResource TitleDelete}"
	Width="300"
	Height="180"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Text="{DynamicResource TextBlockDoYouReallyWantToDelete}" />
		<WrapPanel Grid.Row="1" HorizontalAlignment="Center">
			<Button
				Margin="10,15"
				Click="Accept_Click"
				IsDefault="True"
				Content="{DynamicResource ButtonYes}">
			</Button>
			<Button Margin="10,15" IsCancel="True" Content="{DynamicResource ButtonNo}"></Button>
		</WrapPanel>
	</Grid>
</Window>
